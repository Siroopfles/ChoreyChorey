
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sta elke geauthenticeerde gebruiker toe om documenten te lezen en te schrijven.
    // Dit is een veilig startpunt voor apps waar gebruikers gegevens beheren.
    // Voor meer gedetailleerde controle kun je specifieke regels per collectie definiÃ«ren.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
