rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    // Checks if a user is a member of a given organization by looking at the org doc.
    function isOrgMember(orgId) {
      return request.auth != null && get(/databases/$(database)/documents/organizations/$(orgId)).data.members[request.auth.uid] != null;
    }

    // Checks if a user is the owner of a given organization.
    function isOrgOwner(orgId) {
       return request.auth != null && get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid;
    }

    // --- Collection Rules ---

    // Users can read public profiles and write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // To read an organization, the user must be in its members map.
    // This breaks the recursive loop that was causing permission errors.
    match /organizations/{orgId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow write: if isOrgOwner(orgId); // Only the owner can modify the organization document itself.
    }

    // Members subcollection (if used) can be read by other members.
    match /organizations/{orgId}/members/{memberId} {
      allow read: if isOrgMember(orgId);
      allow write: if isOrgOwner(orgId);
    }

    // Tasks can be created by org members. Read/Update/Delete requires membership.
    match /tasks/{taskId} {
      allow read: if isOrgMember(resource.data.organizationId);
      allow create: if isOrgMember(request.resource.data.organizationId);
      allow update, delete: if isOrgMember(resource.data.organizationId);
    }

    match /projects/{projectId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }
    
    match /teams/{teamId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }

    match /invites/{inviteId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
    }
    
    match /taskTemplates/{templateId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }

    match /checklistTemplates/{templateId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }
    
    match /automations/{automationId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }
    
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /apiKeys/{keyId} {
      allow read: if isOrgMember(resource.data.organizationId);
      allow create: if isOrgMember(request.resource.data.organizationId);
      allow update, delete: if isOrgMember(resource.data.organizationId);
    }

    match /webhooks/{webhookId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }

    match /aiFeedback/{feedbackId} {
      allow create: if request.auth != null;
    }
    
    match /personalGoals/{goalId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /teamChallenges/{challengeId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }

    match /ideas/{ideaId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if isOrgMember(request.resource.data.organizationId);
       allow update, delete: if isOrgMember(resource.data.organizationId);
    }

    match /notifications/{notificationId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    match /activityFeed/{feedItemId} {
       allow read: if isOrgMember(resource.data.organizationId);
       allow create: if request.auth != null && isOrgMember(request.resource.data.organizationId);
    }

    match /presence/{userId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/organizations/$(resource.data.organizationId)).data.members[request.auth.uid] != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}