
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: TEMPORARY DEBUGGING RULE
    // This rule is insecure and allows any authenticated user to read and write all data.
    // It is intended ONLY to diagnose the persistent PERMISSION_DENIED error.
    // This should be replaced with secure rules once the issue is resolved.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
